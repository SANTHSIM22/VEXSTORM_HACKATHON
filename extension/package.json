{
  "name": "zerotrace",
  "publisher": "santhsim",
  "displayName": "ZeroTrace",
  "description": "Multi-agent AI Security Scanner powered by LangGraph + Mistral",
  "version": "0.0.4",
  "icon": "media/zerotrace.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zerotrace.runScan",
        "title": "ZeroTrace: Run Security Scan on Folder"
      },
      {
        "command": "zerotrace.runScanOnOpen",
        "title": "ZeroTrace: Scan Currently Open Workspace"
      },
      {
        "command": "zerotrace.connectDashboard",
        "title": "ZeroTrace: Connect to Dashboard (Sign In)"
      },
      {
        "command": "zerotrace.disconnectDashboard",
        "title": "ZeroTrace: Disconnect from Dashboard (Sign Out)"
      },
      {
        "command": "zerotrace.uploadHtmlReport",
        "title": "ZeroTrace: Upload Existing HTML Report to Dashboard"
      },
      {
        "command": "zerotrace.checkDashboardStatus",
        "title": "ZeroTrace: Check Dashboard Connection Status"
      }
    ],
    "configuration": {
      "title": "ZeroTrace Security Scanner",
      "properties": {
        "zerotrace.mistralApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Mistral API key (https://console.mistral.ai)"
        },
        "zerotrace.mistralModel": {
          "type": "string",
          "default": "mistral-large-latest",
          "enum": [
            "mistral-large-latest",
            "mistral-medium-latest",
            "mistral-small-latest",
            "open-mixtral-8x22b"
          ],
          "description": "Mistral model to use for analysis"
        },
        "zerotrace.maxFileSizeKB": {
          "type": "number",
          "default": 200,
          "description": "Skip files larger than this size (KB)"
        },
        "zerotrace.fileExtensions": {
          "type": "array",
          "default": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".py",
            ".php",
            ".java",
            ".go",
            ".rb",
            ".env",
            ".json",
            ".yaml",
            ".yml",
            ".sh"
          ],
          "description": "File extensions to scan"
        },
        "zerotrace.dashboardUrl": {
          "type": "string",
          "default": "http://localhost:5000",
          "description": "Base URL of the ZeroTrace dashboard backend server (e.g. http://localhost:5000)"
        },
        "zerotrace.dashboardEmail": {
          "type": "string",
          "default": "",
          "description": "Email address used to log in to the ZeroTrace dashboard"
        },
        "zerotrace.dashboardPassword": {
          "type": "string",
          "default": "",
          "description": "Password used to log in to the ZeroTrace dashboard (stored securely via SecretStorage)"
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild extension.js --bundle --outfile=dist/extension.js --external:vscode --platform=node --format=cjs --minify",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "@langchain/core": "^0.3.80",
    "@langchain/langgraph": "^0.2.74",
    "@langchain/mistralai": "^0.1.1",
    "acorn": "^8.16.0",
    "acorn-walk": "^8.3.5",
    "glob": "^10.5.0",
    "ignore": "^5.3.2",
    "js-yaml": "^4.1.1",
    "langchain": "^0.3.37",
    "pdfkit": "^0.17.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2"
  }
}
